@model UploadImagem.ViewModels.CadastrarLojaViewModel

@{
    ViewData["Title"] = "Cadastrar loja";
}

<form asp-action="Upload" asp-controller="Home" method="post" enctype="multipart/form-data">

    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Digite o nome da loja:</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-12">
            <label class="col-form-label">Selecione a foto da loja:</label>
            <input asp-for="Arquivo" class="form-control" />
            <span asp-validation-for="Arquivo" class="text-danger"></span>
        </div>
    </div>


    <div class="row mt-2">
        <div class="col-12">
            <button type="submit" class="btn btn-success">Upload File</button>
        </div>
    </div>
</form>